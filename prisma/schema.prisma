generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobStatus {
  ACTIVE
  PAUSED
  DONE
}

model User {
  id      Int     @id @default(autoincrement())
  clerkId String  @unique
  email   String? @unique
  name    String?

  jobs Job[]
}

model Job {
  description String?
  id          Int       @id @default(autoincrement())
  name        String
  startedAt   DateTime?
  status      JobStatus @default(PAUSED)
  stoppedAt   DateTime?
  totalMs     Int       @default(0)
  user        User      @relation(fields: [userId], references: [id])
  userId      Int

  @@index([userId])
}
